<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Blog</title>
  <link rel="stylesheet" href="/css/edit-blogs.css">
</head>
<body>
  <%- include('navBar') %>
  <h1>Edit Blog</h1>

  <% if (error_messages && error_messages.length > 0) { %>
    <div class="flash-message-container">
      <% error_messages.forEach(message => { %>
        <div class="flash-message">
          <p>
            <%= message %>
            <span class="close-btn" onclick="this.parentNode.style.display='none';">&times;</span>
          </p>
        </div>
      <% }); %>
    </div>
  <% } %>

  <form action="/blogs/edit/<%= blog.id %>" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= blog.title %>" required>

    <label for="content">Content:</label>
    <textarea id="content" name="content" required><%= blog.content %></textarea>

    <button type="submit">Save Changes</button>
  </form>
</body>
</html>
